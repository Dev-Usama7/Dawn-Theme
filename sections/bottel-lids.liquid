  <section class="water_botteles">
      <div class="adjust_markap">
      <div class="bottels_for-kids">
        <h1>{{ section.settings.heading }}</h1>
      </div>
      <ul class="bottles_list">
        {%- for block in section.blocks -%}
        <li><a href="#">
          <h4>{{ block.settings.product_name }} </h4>
          <span> {{ block.settings.product_disc }} </span>
          <img src="{{ block.settings.product_image| img_url: 'master' }}" alt="">
        </a>
      </li>
      {%- endfor -%}
      </ul>
      <button>SHOP LIDS</button>
    </div>
    </section>


{% schema %}
  {
  "name": "bottel lids",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "block",
      "type": "block",
      "settings": [
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "product image"
        },
        {
          "type": "text",
          "id": "product_name",
          "label": "product name"
        },
        {
          "type": "text",
          "id": "product_disc",
          "label": "product disc"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "bottle lids"
    }
  ]
}  
{% endschema %}
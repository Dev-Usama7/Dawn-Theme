<section class="check_features" style="background-color: {{ section.settings.background_color }}">
    <div class="width_features">
        <div class="features-bottles">
            <img src="{{ section.settings.image_picker_0 | img_url: 'master' }}">
        </div>
        <div class="features-content">
            <h2>{{ section.settings.heading }}</h2>
            <div class="features-blocks">
                {%- for block in section.blocks -%}
                <div class="feature-single-block">
                    <div class="feature-icon">
                        <span>
                   <img src="{{ block.settings.icon | img_url: 'master' }}" width="18" height="19" />
                        </span>
                    </div>
                    <div class="feature-heading">{{ block.settings.item }}</div>
                    <div class="feature-para">{{ block.settings.item_content }}</div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "features section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
      {
          "type": "image_picker",
          "label": "Image Picker 0",
          "id": "image_picker_0"
        }
  ],
  "blocks": [
    {
      "name": "features",
      "type": "features",
      "settings": [
      
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "item",
          "label": "Item"
        },
        {
          "type": "text",
          "id": "item_content",
          "label": "Item Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features"
    }
  ]
}
{% endschema %}
